<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".FourthActivity">

    <FrameLayout
            android:id="@+id/cabecera"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_heightPercent="10%"
            android:background="@color/colorAccent"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"/>

    <FrameLayout
            android:id="@+id/first_panel"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_heightPercent="40%"
            android:background="@color/colorPrimaryDark"
            android:layout_alignParentStart="true"
            android:layout_below="@id/cabecera"/>

    <FrameLayout
            android:id="@+id/last_panel"
            android:layout_width="match_parent"
            app:layout_widthPercent="50%"
            android:layout_height="0dp"
            app:layout_heightPercent="50%"
            android:background="@android:color/holo_blue_light"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/first_panel"/>

    <FrameLayout
            android:id="@+id/center_up_panel"
            android:layout_width="0dp"
            app:layout_widthPercent="50%"
            android:layout_height="0dp"
            app:layout_heightPercent="30%"
            android:background="@color/colorPrimary"
            android:layout_below="@id/first_panel"
            android:layout_toEndOf="@id/last_panel"/>

    <FrameLayout
            android:id="@+id/center_down_panel"
            android:layout_width="0dp"
            app:layout_widthPercent="50%"
            android:layout_height="0dp"
            app:layout_heightPercent="20%"
            android:background="@android:color/holo_blue_dark"
            android:layout_toEndOf="@id/last_panel"
            android:layout_below="@+id/center_up_panel"/>




</android.support.percent.PercentRelativeLayout>